{
  // BEHAVIOR
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoSurround": "never",
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.matchBrackets": "never",
  "editor.maxTokenizationLineLength": 100000,
  "editor.parameterHints.cycle": true,
  "editor.showFoldingControls": "always",
  "editor.snippetSuggestions": "none",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "filesFirst",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.showPushSuccessNotification": true,
  "search.useIgnoreFiles": false,
  "telemetry.enableTelemetry": false,
  "terminal.explorerKind": "external",
  "terminal.integrated.scrollback": 10000,
  "window.newWindowDimensions": "inherit",
  "window.openWithoutArgumentsInNewWindow": "off",
  "window.restoreFullscreen": true,
  "workbench.commandPalette.history": 0,
  "workbench.startupEditor": "none",
  "zenMode.restore": true,

  // APPEARANCE
  "bracket-pair-colorizer-2.showBracketsInGutter": true,
  "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
  "bracket-pair-colorizer-2.showVerticalScopeLine": false,
  "discord.detailsIdle": "",
  "discord.detailsEditing": "{workspace}/{dirname}",
  "discord.detailsDebugging": "{workspace}/{dirname}",
  "discord.lowerDetailsEditing": "{filename}",
  "discord.lowerDetailsDebugging": "{filename}",
  "discord.largeImage": "{LANG}",
  "discord.largeImageIdle": "Idle",
  "discord.lowerDetailsNotFound": "",
  "discord.workspaceElapsedTime": true,
  "discord.lowerDetailsIdle": "Idle",
  "editor.cursorStyle": "underline",
  "editor.fontFamily": "'Graph 35+ pix', 'Elected Office', 'Office Code Pro', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.maxColumn": 600,
  "editor.renderWhitespace": "boundary",
  "editor.scrollbar.vertical": "visible",
  "editor.wordWrapColumn": 400,
  "terminal.integrated.fontFamily": "monospace",
  "window.zoomLevel": 1,
  "workbench.colorTheme": "One Dark Pro Monokai Darker",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.tree.indent": 18,
  "workbench.tree.renderIndentGuides": "none",
  "zenMode.hideTabs": false,

  // LANGUAGE BEHAVIOR
  "html.autoClosingTags": false,
  "html.format.enable": false,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "css.lint.compatibleVendorPrefixes": "warning",
  "css.lint.emptyRules": "warning",
  "css.lint.ieHack": "warning",
  "eslint.format.enable": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": true,
  "less.lint.boxModel": "warning",
  "prettier.endOfLine": "auto",
  "prettier.printWidth": 90,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.quoteProps": "consistent",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportGeneralTypeIssues": "warning"
  },
  "python.formatting.provider": "yapf",
  "python.languageServer": "Pylance",
  "python.formatting.yapfArgs": [
    "--style",
    "{USE_TABS: False, INDENT_WIDTH: 2, INDENT_BLANK_LINES: True, COLUMN_LIMIT: 120, SPACES_BEFORE_COMMENT: 1, BLANK_LINES_AROUND_TOP_LEVEL_DEFINITION: 1, BLANK_LINE_BEFORE_NESTED_CLASS_OR_DEF: False}"
  ],
  "scss.lint.boxModel": "warning",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "yaml.format.singleQuote": true,
  "zigLanguageClient.debugLog": true,
  "zigLanguageClient.path": "/home/lin/Downloads/zls/zig-cache/bin/zls",

  // LANGUAGE APPEARANCE
  "bracket-pair-colorizer-2.colorMode": "Independent",
  "bracket-pair-colorizer-2.colors": [
    "rgb(255,255,64)",
    "rgb(127,255,127)",
    "rgb(255,127,255)",
    "rgb(79,236,236)"
  ],
  "yaml.format.printWidth": 400
}
